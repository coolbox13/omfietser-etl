# Omfietser ETL Environment Configuration

# =================================
# Database Configuration
# =================================
POSTGRES_DB=omfietser_etl
POSTGRES_USER=etl_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =================================
# N8N Configuration
# =================================
N8N_USER=admin
N8N_PASSWORD=your_n8n_password_here
N8N_WEBHOOK_URL=http://localhost:5678

# =================================
# Processor API Configuration
# =================================
PROCESSOR_PORT=4000
PROCESSOR_NODE_ENV=production
PROCESSOR_LOG_LEVEL=info
PROCESSOR_BATCH_SIZE=100

# =================================
# Scraper Configuration
# =================================
SCRAPER_AH_PORT=8001
SCRAPER_JUMBO_PORT=8002
SCRAPER_PLUS_PORT=8003
SCRAPER_ALDI_PORT=8004
SCRAPER_KRUIDVAT_PORT=8005

# =================================
# Monitoring Configuration
# =================================
GRAFANA_PASSWORD=your_grafana_password_here
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =================================
# General Configuration
# =================================
NODE_ENV=production
LOG_LEVEL=info
TIMEZONE=Europe/Amsterdam

