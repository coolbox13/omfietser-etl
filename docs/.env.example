# Multi-Store Scraper Configuration Template
# Copy this file to .env and customize the values

# Service Ports
AH_API_PORT=8001
JUMBO_API_PORT=8002
PLUS_API_PORT=8003
ALDI_API_PORT=8004
KRUIDVAT_API_PORT=8005
N8N_PORT=5678
POSTGRES_PORT=5432

# Scraper Configuration
MAX_CONCURRENT_JOBS=3
DEFAULT_MAX_PRODUCTS=1000
DEFAULT_CATEGORIES_LIMIT=5

# Webhook Configuration
WEBHOOK_BASE_URL=http://n8n:5678
WEBHOOK_TIMEOUT=30

# API Security (Optional)
# API_KEY=your-secret-api-key-here
# ENABLE_AUTH=false

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# Resource Limits
API_MEMORY_LIMIT=1G
API_CPU_LIMIT=1.0

# Network Configuration
DOCKER_NETWORK=scraper_network

# Data Persistence
ENABLE_DATA_PERSISTENCE=true
BACKUP_RESULTS=true

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30s

# PostgreSQL Database Configuration
POSTGRES_DB=scraper_db
POSTGRES_USER=scraper_user
POSTGRES_PASSWORD=scraper_password

# Development Settings (for local development only)
# DEV_MODE=false
# RELOAD_ON_CHANGE=false
