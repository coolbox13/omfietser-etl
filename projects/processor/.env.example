# Environment Configuration Template for Supermarket Processor
# Copy to .env and modify values as needed

# ================================
# Application Configuration
# ================================
NODE_ENV=production
LOG_LEVEL=info
CONSOLE_OUTPUT=true
FILE_OUTPUT=true
LOG_DIR=logs

# ================================
# Database Configuration
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=supermarket_processor
DB_USER=processor
DB_PASSWORD=your_db_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ================================
# API Server Configuration
# ================================
PORT=4000
HOST=0.0.0.0
API_PREFIX=/api/v1

# CORS and Request Settings
ENABLE_CORS=true
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb
ENABLE_REQUEST_LOGGING=true

# ================================
# Webhook Configuration (N8N Integration)
# ================================
WEBHOOK_BASE_URL=http://n8n:5678
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3

# ================================
# Processing Configuration
# ================================
OUTPUT_TARGET=both
BATCH_SIZE=100

# ================================
# Directory Configuration
# ================================
INPUT_DIR=input
OUTPUT_DIR=output
INTERMEDIATE_DIR=intermediate

# ================================
# Monitoring Configuration
# ================================
ENABLE_MONITORING=true
METRICS_RETENTION_DAYS=7
ALERT_COOLDOWN_MS=300000

# Performance Thresholds
MAX_PROCESSING_TIME_MS=300000
MAX_ERROR_RATE=10
MAX_MEMORY_USAGE_MB=1024
MIN_SUCCESS_RATE=90

# ================================
# Development Settings (optional)
# ================================
# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# PORT=4001